<view class="container">
  <!-- ÂïÜÂìÅÂõæÁâáÂå∫Âüü -->
  <view class="swiper-container" id="swiper-container">
    <swiper class="swiper_box" indicator-dots="true" indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#D4A574"
      autoplay="{{!goodsDetail.basicInfo.videoId}}" circular>
      <swiper-item wx:if="{{goodsDetail.basicInfo.videoId}}">
        <video src="{{videoMp4Src}}" autoplay="true" loop="true" style='width:100%;height:100%;'></video>
      </swiper-item>
      <swiper-item wx:for="{{goodsDetail.pics}}" wx:key="id">
        <image src="{{item.pic}}" class="slide-image" mode="aspectFill" lazy-load="true" />
      </swiper-item>
    </swiper>
  </view>
  
  <!-- ÂïÜÂìÅ‰ø°ÊÅØÂç°Áâá -->
  <view class="goods-info-card">
    <view class="price-section">
      <view class="current-price">
        <text class="currency">¬•</text>
        <text class="price-num">{{selectSizePrice}}</text>
      </view>
      <view wx:if="{{goodsDetail.basicInfo.originalPrice && goodsDetail.basicInfo.originalPrice > 0}}"
        class="original-price">
        <text>¬•{{selectSizeOPrice}}</text>
      </view>
    </view>
    
    <view class="goods-title">{{goodsDetail.basicInfo.name}}</view>
    
    <view wx:if="{{goodsDetail.basicInfo.characteristic}}" class="characteristic-tag">
      <text class="tag-icon">‚ú¶</text>
      <text class="tag-text">{{goodsDetail.basicInfo.characteristic}}</text>
    </view>
    
    <view class="commission-tip" wx:if="{{goodsDetail.basicInfo.commissionType == 1}}">
      <text class="tip-icon">üí∞</text>
      {{ $t.goodsDetail.commission1 }} {{goodsDetail.basicInfo.commission}} {{ $t.goodsDetail.commission2 }}
    </view>
    <view class="commission-tip" wx:if="{{goodsDetail.basicInfo.commissionType == 2}}">
      <text class="tip-icon">üí∞</text>
      {{ $t.goodsDetail.commission1 }} {{goodsDetail.basicInfo.commission}} {{ $t.goodsDetail.commission3 }}
    </view>
  </view>
  <van-cell-group wx:if="{{curGoodsKanjia}}" title="{{ $t.goodsDetail.kanJiaSetting }}">
    <van-cell title="{{ $t.goodsDetail.limit }}" value="{{curGoodsKanjia.number}}" />
    <van-cell title="{{ $t.goodsDetail.saledNum }}" value="{{curGoodsKanjia.numberBuy}}" />
    <van-cell title="{{ $t.goodsDetail.originalPrice }}" value="Ôø•{{curGoodsKanjia.originalPrice}}" />
    <van-cell title="{{ $t.goodsDetail.minPrice }}" value="Ôø•{{curGoodsKanjia.minPrice}}" />
    <van-cell title="{{ $t.goodsDetail.end }}" value="{{curGoodsKanjia.dateEnd}}" />
  </van-cell-group>
  <view class="curKanjiaprogress" wx:if="{{curKanjiaprogress}}">
    <view class="name">{{ $t.goodsDetail.help }}
      <text style='color:red;font-weight:bold;'>{{curKanjiaprogress.joiner.nick}}</text> {{ $t.goodsDetail.kanjia }}ÔºÅ
    </view>
    <van-progress
      percentage="{{100 * (curGoodsKanjia.originalPrice - curKanjiaprogress.kanjiaInfo.curPrice) / (curGoodsKanjia.originalPrice - curGoodsKanjia.minPrice)}}"
      pivot-text="Ôø•{{curKanjiaprogress.kanjiaInfo.curPrice}}"
      pivot-color="#1aad19"
      color="#1aad19"
      custom-class="van-progress"
    />
    <view class="flex">
      <view class="kjbutton">
        <button type="primary" open-type="share">{{ $t.goodsDetail.inviteKanJiaFriend }}</button>
      </view>
    </view>
    <van-cell title="{{ $t.goodsDetail.helpPerson }}" value="{{curKanjiaprogress.kanjiaInfo .helpNumber}}" />
    <van-cell title="{{ $t.goodsDetail.status }}" value="{{curKanjiaprogress.kanjiaInfo .statusStr}}" />
    <van-cell title="{{ $t.goodsDetail.joinTime }}" value="{{curKanjiaprogress.kanjiaInfo .dateAdd}}" />
  </view>
  
  <!-- ËßÑÊ†ºÈÄâÊã©Âç°Áâá -->
  <view wx:if="{{hasMoreSelect && goodsDetailSkuShowType==0}}" class="spec-select-card" bind:tap="bindGuiGeTap">
    <view class="spec-title">{{ $t.common.select }}</view>
    <view class="spec-content">
      <block wx:for="{{goodsDetail.properties}}" wx:key="id">
        <text class="spec-tag">{{item.name}}</text>
      </block>
      <block wx:for="{{goodsAddition}}" wx:key="id">
        <text class="spec-tag">{{item.name}}</text>
      </block>
    </view>
    <view class="spec-arrow">‚Ä∫</view>
  </view>
  
  <!-- Â±ïÂºÄÂºèËßÑÊ†ºÈÄâÊã© -->
  <view class="spec-select-expanded" wx:if="{{goodsDetailSkuShowType==1}}">
    <view class="section-header">
      <view class="header-line"></view>
      <view class="header-text">{{ $t.goodsDetail.noSelectSku }}</view>
      <view class="header-line"></view>
    </view>
    
    <view class="spec-options-wrapper">
      <block wx:for="{{goodsDetail.properties}}" wx:for-item="property" wx:for-index="idx" wx:key="id">
        <view class="spec-group">
          <view class="spec-label">{{property.name}}</view>
          <view class="spec-items">
            <view class="spec-item {{item.active ? 'active' : '' }}" wx:for="{{property.childsCurGoods}}" wx:key="id"
              bindtap="labelItemTap" data-propertyindex="{{idx}}" data-propertychildindex="{{index}}">
              {{item.name}}
            </view>
          </view>
        </view>
      </block>
    </view>
    
    <view class="quantity-selector">
      <view class="quantity-label">{{ $t.goodsDetail.buyNumber }}</view>
      <van-stepper value="{{ buyNumber }}" min="{{ buyNumMin }}" max="{{ buyNumMax }}" bind:change="stepChange" 
        button-size="36rpx" />
    </view>
  </view>
  
  <!-- Â∫óÈì∫‰ø°ÊÅØÂç°Áâá -->
  <view wx:if="{{shopSubdetail}}" class="shop-info-card">
    <view class="shop-badge">
      <image mode="aspectFill" src="{{shopSubdetail.info.pic}}" class="shop-avatar"></image>
    </view>
    <view class="shop-details">
      <view class="shop-name">{{shopSubdetail.info.name}}</view>
      <view class="shop-address">üìç {{shopSubdetail.info.address}}</view>
    </view>
  </view>
  
  <!-- ÂïÜÂìÅËØ¶ÊÉÖÂç°Áâá -->
  <view class="goods-detail-card" id="goods-des-info">
    <view class="detail-header">
      <view class="header-decorator"></view>
      <view class="header-title">{{ $t.goodsDetail.title }}</view>
      <view class="header-decorator"></view>
    </view>
    <view class="detail-content">
      <parser html="{{goodsDetail.content}}" />
    </view>
  </view>
  <van-cell-group wx:if="{{curKanjiaprogress && curKanjiaprogress.helps && curKanjiaprogress.helps.length>0}}" title="{{ $t.goodsDetail.kanjiaLogs }}">
    <view class="kjlj"  wx:for="{{curKanjiaprogress.helps}}" wx:key="*this">
      <image class="kjlj-l" src="{{item.avatarUrl}}" mode="aspectFill" />
      <van-cell custom-class="kjlj-r" title="Ôø• {{item.cutPrice}}" label="{{item.nick}} {{item.dateAdd}} {{ $t.goodsDetail.help2 }}" size="large" />
    </view>
    <view style="height: 64rpx;"></view>
  </van-cell-group>
  <view class='kjBuyButton' wx:if="{{curGoodsKanjia && curKanjiaprogress}}">
    <view class="item" wx:if="{{curKanjiaprogress.kanjiaInfo.uid != curuid}}">
      <van-button type="primary" block bind:click="helpKanjia" disabled="{{myHelpDetail}}">
        {{myHelpDetail ? $t.goodsDetail.helped : $t.goodsDetail.helphe}}</van-button>
    </view>
    <view class="item" wx:else>
      <van-button type="danger" block bind:click="tobuy">{{ $t.goodsDetail.buyUseCurPrice }}</van-button>
    </view>
  </view>
  <van-goods-action wx:if="{{ goodsDetail.basicInfo.stores < goodsDetail.basicInfo.minBuyNumber }}">
    <van-goods-action-button text='{{ $t.goodsDetail.storeing }}' type="warning" disabled />
  </van-goods-action>
  <van-goods-action wx:else>
    <van-goods-action-button wx:if="{{ curKanjiaprogress }}" text='{{myHelpDetail ? $t.goodsDetail.helped : $t.goodsDetail.helphe}}' type="danger" bind:click="helpKanjia" disabled="{{ myHelpDetail }}" />
    <van-goods-action-button wx:if="{{ goodsDetail.basicInfo.kanjia && !curGoodsKanjia }}" text="{{ $t.goodsDetail.ended }}" type="warning" disabled />
    <van-goods-action-button wx:elif="{{curGoodsKanjia && (!curKanjiaprogress || curKanjiaprogress.kanjiaInfo.uid != curuid)}}" text="{{ $t.goodsDetail.kanjiaBtn }}" type="warning" bind:click="joinKanjia" />
    <van-goods-action-button wx:elif="{{ curKanjiaprogress && curKanjiaprogress.kanjiaInfo.uid == curuid }}" text="Ôø•{{curKanjiaprogress.kanjiaInfo.curPrice}} {{ $t.goodsDetail.buy }}" type="warning" bind:click="{{goodsDetailSkuShowType==0?'toAddShopCar':'addShopCar'}}" />
    <van-goods-action-button wx:else text="{{ $t.goodsDetail.addCartBtn }}" type="warning" bind:click="{{goodsDetailSkuShowType==0?'toAddShopCar':'addShopCar'}}" />
  </van-goods-action>
</view>

<block wx:if="{{posterShow}}">
  <view class="poster-mask"></view>
  <view class="poster">
    <canvas class="canvas" style="{{canvasstyle}}" canvas-id="firstCanvas"></canvas>
  </view>
  <view class="poster-btn">
    <button type="primary" size="mini" bindtap='_saveToMobile'> {{ $t.goodsDetail.saveImage }} </button>
    <button type="warn" size="mini" bindtap='closePop'> {{ $t.common.cancel }} </button>
  </view>
</block>

<poster id="poster" config="{{posterConfig}}" bind:success="onPosterSuccess" bind:fail="onPosterFail"></poster>
<view wx:if="{{showposterImg}}" class="popup-mask"></view>
<view wx:if="{{showposterImg}}" class="posterImg-box">
  <image mode="widthFix" class="posterImg" src="{{posterImg}}"></image>
  <view class="btn-create" bindtap="savePosterPic">{{ $t.goodsDetail.saveImage }}</view>
</view>

<van-popup show="{{ !hideShopPopup }}" round closeable position="bottom"
  custom-style="padding-top:48rpx;max-height: 80%;border-radius: 32rpx 32rpx 0 0;" bind:close="closePopupTap">
  
  <!-- ÂºπÁ™óÂïÜÂìÅ‰ø°ÊÅØ -->
  <view class="popup-goods-card">
    <image class="popup-goods-image" src="{{ skuGoodsPic }}" mode="aspectFill"></image>
    <view class="popup-goods-info">
      <view class="popup-goods-name">{{ goodsDetail.basicInfo.name }}</view>
      <view class="popup-price-row">
        <text class="popup-current-price">¬•{{ selectSizePrice }}</text>
        <text wx:if="{{ selectSizePrice != selectSizeOPrice }}" class="popup-original-price">¬•{{ selectSizeOPrice }}</text>
      </view>
    </view>
  </view>
  
  <!-- ËßÑÊ†ºÈÄâÊã©Âå∫Âüü -->
  <view class="popup-spec-area">
    <block wx:for="{{goodsDetail.properties}}" wx:for-item="property" wx:for-index="idx" wx:key="id">
      <view class="popup-spec-group">
        <view class="popup-spec-label">{{property.name}}</view>
        <view class="popup-spec-items">
          <view class="popup-spec-item {{item.active ? 'active' : '' }}" wx:for="{{property.childsCurGoods}}" wx:key="id"
            bindtap="labelItemTap" data-propertyindex="{{idx}}" data-propertychildindex="{{index}}">
            {{item.name}}
          </view>
        </view>
      </view>
    </block>
    
    <block wx:for="{{goodsAddition}}" wx:for-item="property" wx:for-index="idx" wx:key="id">
      <view class="popup-spec-group">
        <view class="popup-spec-label">{{property.name}}</view>
        <view class="popup-spec-items">
          <view class="popup-spec-item {{item.active ? 'active' : '' }}" wx:for="{{property.items}}" wx:key="id"
            bindtap="labelItemTap2" data-propertyindex="{{idx}}" data-propertychildindex="{{index}}">
            {{item.name}}
          </view>
        </view>
      </view>
    </block>
    
    <block wx:for="{{goodsTimesSchedule}}" wx:for-item="property" wx:key="id">
      <view class="popup-spec-group">
        <view class="popup-spec-label">{{property.day}}</view>
        <view class="popup-spec-items">
          <view class="popup-spec-item {{item.active ? 'active' : '' }}" wx:for-index="index2" wx:for="{{property.items}}" wx:key="id"
            bindtap="skuClick3" data-idx1="{{index}}" data-idx2="{{index2}}">
            {{item.name}}
          </view>
        </view>
      </view>
    </block>
  </view>
  
  <!-- Êï∞ÈáèÈÄâÊã© -->
  <view wx:if="{{ !(curKanjiaprogress && curKanjiaprogress.kanjiaInfo.uid == curuid) }}" class="popup-quantity">
    <view class="popup-quantity-label">{{ $t.goodsDetail.buyNumber }}</view>
    <van-stepper value="{{ buyNumber }}" min="{{ buyNumMin }}" max="{{ buyNumMax }}" bind:change="stepChange" 
      button-size="40rpx" />
  </view>
  
  <!-- Á°ÆËÆ§ÊåâÈíÆ -->
  <view class="popup-action-area">
    <view wx:if="{{ curKanjiaprogress && curKanjiaprogress.kanjiaInfo.uid == curuid }}" 
      class="popup-confirm-btn premium" bindtap="addShopCar">
      ¬•{{curKanjiaprogress.kanjiaInfo.curPrice}} {{ $t.goodsDetail.buy }}
    </view>
    <view wx:else class="popup-confirm-btn premium" bindtap="addShopCar">
      {{ $t.goodsDetail.addCartBtn }}
    </view>
  </view>
</van-popup>